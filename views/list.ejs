            <div class="list-upvote-div askedby">

                <%let link=username===foundQuestions[i].askedBy?"You":foundQuestions[i].askedBy;%>
                Latest Post By :
                <a class="ask-user" href="/users/<%=foundQuestions[i].askedBy%>"><%=link%></a>
                <%= date.date(foundQuestions[i].time)%>
            </div>

